<%- include('../partials/header') %>

<div class="flight-details-container">
  <div class="flight-detail">
    <span class="detail-label">Airline:</span>
    <span class="detail-value"><%= flight.airline %></span>
  </div>
  <div class="flight-detail">
    <span class="detail-label">Airport:</span>
    <span class="detail-value"><%= flight.airport %></span>
  </div>
  <div class="flight-detail">
    <span class="detail-label">Flight No:</span>
    <span class="detail-value"><%= flight.flightNo %></span>
  </div>
  <div class="flight-detail">
    <span class="detail-label">Departs:</span>
    <span class="detail-value"><%= flight.departs.toLocaleString() %></span>
  </div>
  <% flight.destinations.forEach(function(destination) { %>
    <div class="flight-detail">
      <span class="detail-label">Destination Airport:</span>
      <span class="detail-value"><%= destination.destAirport %></span>
    </div>
    <div class="flight-detail">
      <span class="detail-label">Arrival:</span>
      <span class="detail-value"><%= destination.arrival.toLocaleString() %></span>
    </div>
  <% }); %>
</div>

<%- include('../partials/footer') %>