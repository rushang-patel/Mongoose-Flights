<%- include('../partials/header') %>

<table id="flight-details">
  <tr>
    <th>Airline:</th>
    <td><%= flight.airline %></td>
  </tr>
  <tr>
    <th>Airport:</th>
    <td><%= flight.airport %></td>
  </tr>
  <tr>
    <th>Flight No:</th>
    <td><%= flight.flightNo %></td>
  </tr>
  <tr>
    <th>Departs:</th>
    <td><%= flight.departs.toDateString() %></td>
  </tr>
  <tr>
    <th>Destinations:</th>
    <td>
      <ul>
        <% flight.destinations.forEach(function(destination) { %>
          <li>
            Airport: <%= destination.airport %><br>
            Arrival: <%= destination.arrival.toDateString() %>
          </li>
        <% }); %>
      </ul>
    </td>
  </tr>
</table>


<%- include('../partials/footer') %>

