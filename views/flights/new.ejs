<%- include('../partials/header') %>

<form id="new-form" action="/flights" method="POST">
  <label>Airline:</label>
  <select name="airline">
    <option value="American" selected>American</option>
    <option value="Southwest">Southwest</option>
    <option value="United">United</option>
  </select>
  <label>Airport:</label>
  <select name="airport">
    <option value="AUS">AUS</option>
    <option value="DFW">DFW</option>
    <option value="DEN" selected>DEN</option>
    <option value="LAX">LAX</option>
    <option value="SAN">SAN</option>
  </select>
  <label>Flight No.:</label>
  <input type="number" name="flightNo" required min="10" max="9999">
  <label>Departs:</label>
  <input type="datetime-local" name="departs" required>
  <input type="submit" value="Create Flight">
</form>

<%- include('../partials/footer') %>

